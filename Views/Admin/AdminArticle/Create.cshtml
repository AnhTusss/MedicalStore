@model MedicalStore.Models.Article

@{
    ViewData["Title"] = "Thêm bài viết";
}

<h2 class="mb-4">Thêm bài viết</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Tiêu đề:</label>
        <input type="text" name="Title" class="form-control" value="@Model?.Title" />
    </div>

    <div class="mb-3">
        <label class="form-label">Nội dung:</label>
        <textarea name="Content" class="form-control" rows="5">@Model?.Content</textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Hình ảnh:</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
