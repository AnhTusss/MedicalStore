@model IEnumerable<MedicalStore.Models.Article>

@{
    ViewData["Title"] = "Bài viết";
}

<style>
    .article-card {
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        overflow: hidden;
        transition: 0.3s;
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .article-card:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        }

        .article-card img {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

    .article-content {
        padding: 20px;
        flex: 1;
    }

    .article-title {
        font-size: 1.25rem;
        color: #007bff;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .article-summary {
        color: #555;
        font-size: 0.95rem;
        margin-bottom: 15px;
    }

    .article-readmore {
        text-align: right;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Tin tức & Bài viết</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var article in Model)
        {
            <div class="col">
                <div class="article-card h-100">
                    <img src="@article.ImageUrl" alt="@article.Title" />
                    <div class="article-content">
                        <div class="article-title">@article.Title</div>
                        <div class="article-summary">@article.Summary</div>
                        <div class="article-readmore">
                            <a class="btn btn-sm btn-outline-primary" href="/Article/Details/@article.Id">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
