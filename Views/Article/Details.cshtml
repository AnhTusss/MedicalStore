@model MedicalStore.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container my-5">
    <div class="card shadow-lg border-0 mx-auto" style="max-width: 900px;">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl"
                 alt="Ảnh bài viết"
                 class="img-fluid d-block mx-auto"
                 style="max-height: 400px; object-fit: contain;" />
        }

        <div class="card-body">
            <h2 class="card-title text-primary fw-bold mb-3 text-center">@Model.Title</h2>

            <hr />

            <p class="card-text fs-5" style="white-space: pre-wrap;">
                @Model.Content
            </p>

            <div class="mt-4">
                <a href="/Article" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
