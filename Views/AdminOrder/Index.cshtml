@model List<MedicalStore.Models.Order>
<a href="/AdminHome/Dashboard" class="btn btn-secondary mb-3">
    ← Trở về trang quản trị
</a>

<h2 class="text-primary">Danh sách đơn hàng</h2>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Khách hàng</th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <th>Ngày đặt</th>
            <th>Phương thức</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.Address</td>
                <td>@order.Phone</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.PaymentMethod</td>
                <td>@order.Status</td>
                <td>
                    <form asp-action="UpdateStatus" method="post" class="d-flex">
                        <input type="hidden" name="id" value="@order.Id" />
                        <select name="status" class="form-select form-select-sm me-2">
                            <option value="Chờ xác nhận" selected="@("Chờ xác nhận" == order.Status)">Chờ xác nhận</option>
                            <option value="Đang xử lý" selected="@("Đang xử lý" == order.Status)">Đang xử lý</option>
                            <option value="Đang giao" selected="@("Đang giao" == order.Status)">Đang giao</option>
                            <option value="Đã giao" selected="@("Đã giao" == order.Status)">Đã giao</option>
                            <option value="Đã hủy" selected="@("Đã hủy" == order.Status)">Đã hủy</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-success">Lưu</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
