@{
    ViewData["Title"] = "Đăng nhập tài khoản";
    ViewData["HideNavbar"] = "true"; 
}

<div class="container" style="max-width: 500px; margin-top: 60px;">

    <a href="/Product" class="btn btn-outline-secondary mb-3">← Trở về</a> 
    @if (TempData["RegisterSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>@TempData["RegisterSuccess"]</strong>
            <a href="/Product" class="btn btn-sm btn-outline-primary ms-3">← Trở về trang sản phẩm</a>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
        </div>
    }
    else
    {
        <h2 class="mb-4 text-center text-primary">Đăng nhập tài khoản</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-warning text-center">@TempData["Error"]</div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form method="post" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">Tài khoản</label>
                <input type="text" name="username" class="form-control" placeholder="Nhập tên tài khoản" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <input type="password" name="password" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>

            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>

            <div class="mt-3 text-center">
                Chưa có tài khoản? <a href="/Account/Register" class="text-decoration-none">Đăng ký ngay</a>
            </div>
        </form>
    }
</div>
